= form_for @victim do |f|
  - if @victim.errors.any?
    #error_explanation
      %h2= "#{pluralize(@victim.errors.count, "error")} prohibited this victim from being saved:"
      %ul
        - @victim.errors.full_messages.each do |msg|
          %li= msg

  / .field
  /   = f.label :name
  /   = f.text_field :name
  .field
    = f.label :facebook_url
    = f.text_field :facebook_url
  / .field
  /   = f.label :gender
  /   = f.text_field :gender
  / .field
  /   = f.label :city
  /   = f.text_field :city
  .actions
    = f.submit 'Save'
